<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="playerNumber"
            type="int" />

        <variable
            name="scoreboardViewModel"
            type="com.braindead.scoreboard.viewmodel.ScoreboardViewModel" />
    </data>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{safeUnbox(scoreboardViewModel.visibilityList[playerNumber])}">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:onClick="@{() -> scoreboardViewModel.onActivatePlayer(playerNumber)}"
            android:onLongClick="@{() -> scoreboardViewModel.onActivatePlayerSettings(playerNumber)}"
            android:text="@{scoreboardViewModel.nameList[playerNumber]}"
            android:textStyle='@{safeUnbox(scoreboardViewModel.isCurrentList[playerNumber]) == true ? "bold" : "normal"}'
            android:textSize="30sp" />

        <TextView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@{safeUnbox(scoreboardViewModel.colorList[playerNumber])}"
            android:gravity="center"
            android:onLongClick="@{() -> scoreboardViewModel.onActivatePlayerSettings(playerNumber)}" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@{scoreboardViewModel.scoreList[playerNumber]}"
            android:textStyle='@{safeUnbox(scoreboardViewModel.isCurrentList[playerNumber]) == true ? "bold" : "normal"}'
            android:textSize="30sp" />
    </TableRow>
</layout>