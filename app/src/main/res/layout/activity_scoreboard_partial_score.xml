<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="playerNumber"
            type="int" />

        <variable
            name="scoreboardViewModel"
            type="com.braindead.scoreboard.viewmodel.ScoreboardViewModel" />

    </data>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{safeUnbox(scoreboardViewModel.observablePlayerIsActiveList[playerNumber])}">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:text="@{scoreboardViewModel.observablePlayerPartialScoreList[playerNumber]}"
            android:textSize="12sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@{scoreboardViewModel.observableCurrentDelta}"
            android:textSize="24sp" />

    </TableRow>

</layout>