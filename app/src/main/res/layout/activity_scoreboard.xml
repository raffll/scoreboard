<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="scoreboardViewModel"
            type="com.braindead.scoreboardmvvm.viewmodel.ScoreboardViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_table"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:id="@+id/player_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/button_table"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{safeUnbox(scoreboardViewModel.observablePlayerVisibility[0])}">

                    <TextView
                        android:id="@+id/player_0_name"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:onClick="@{() -> scoreboardViewModel.onClickedAtPlayer(0)}"
                        android:text="@{scoreboardViewModel.observablePlayerNameList[0]}"
                        android:theme="@style/PlayerRowText" />

                    <TextView
                        android:id="@+id/player_0_score"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@{scoreboardViewModel.observablePlayerScoreList[0]}"
                        android:theme="@style/PlayerRowText" />

                </TableRow>

                <TableRow
