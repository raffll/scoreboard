                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:onClick="@{() -> scoreboardViewModel.onActivatePlayer(0)}"
                        android:onLongClick="@{() -> scoreboardViewModel.onActivatePlayerSettings(0)}"
                        android:text="@{scoreboardViewModel.observablePlayerNameList[0]}"
                        android:textStyle='@{safeUnbox(scoreboardViewModel.observablePlayerIsActiveList[0]) == true ? "bold" : "normal"}'
                        android:theme="@style/PlayerRowText" />

