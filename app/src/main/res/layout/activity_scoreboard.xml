                </TableRow>
            </TableLayout>
        </ScrollView>

        <TableLayout
            android:id="@+id/button_table"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/minus_one"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> scoreboardViewModel.onClickedScoreChange(-1)}"
                    android:text="@string/minus1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/plus_one"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> scoreboardViewModel.onClickedScoreChange(1)}"
                    android:text="@string/plus1"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/minus_ten"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> scoreboardViewModel.onClickedScoreChange(-10)}"
                    android:text="@string/minus10"
                    android:textSize="24sp" />

                <Button
